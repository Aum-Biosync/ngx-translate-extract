{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "removeComments": true,
        "declaration": true,
        "target": "es6",
        "lib": [
            "es2019",
            "es2020",
            "DOM"
        ],
        "module": "ES2020",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "typeRoots" : [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": []
}
